<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="shortcut icon" href="/images/favicon.jpeg" type="image/x-icon" />
    <script
      src="https://kit.fontawesome.com/7e54cef37a.js"
      crossorigin="anonymous"
    ></script>
    <title>Adding details</title>
  </head>
  <body>
    <div id="header">
      <div class="container">
        <nav>
          <img
            src="images/logo.png"
            class="logo"
            onclick="window.location.href='/'"
          />
          <ul id="sidemenu">
            <li><a href="/admin">Home</a></li>
            <!-- <li><a href="/../#about">About</a></li>
            <li><a href="/../#services">Services</a></li>
            <li><a href="/../#portfolio">Portfolio</a></li>
            <li><a href="/../#contact">Conact</a></li> -->
            <li><a href="/form">Add details</a></li>
            <i class="fa-solid fa-xmark" onclick="closemenu()"></i>
          </ul>
          <i class="fa-solid fa-bars" onclick="openmenu()"></i>
        </nav>
      </div>
    </div>

    <!-- Add your form content here -->
    <div class="container">
      <form>
        <div class="radio-group">
          <h3>Select Category:</h3>
          <div class="radio-option">
            <input
              type="radio"
              id="skills"
              name="category"
              value="skills"
              onchange="showForm('skills')"
            />
            <label
              for="skills"
              onclick="document.getElementById('skills').click()"
              >Skills</label
            >
          </div>
          <div class="radio-option">
            <input
              type="radio"
              id="experience"
              name="category"
              value="experience"
              onchange="showForm('experience')"
            />
            <label
              for="experience"
              onclick="document.getElementById('experience').click()"
              >Experience</label
            >
          </div>
          <div class="radio-option">
            <input
              type="radio"
              id="education"
              name="category"
              value="education"
              onchange="showForm('education')"
            />
            <label
              for="education"
              onclick="document.getElementById('education').click()"
              >Education</label
            >
          </div>
          <div class="radio-option">
            <input
              type="radio"
              id="services"
              name="category"
              value="services"
              onchange="showForm('services')"
            />
            <label
              for="services"
              onclick="document.getElementById('services').click()"
              >Services</label
            >
          </div>
        </div>
      </form>

        <!-- Skills Form -->
        <div id="skills-form" class="form-section">
          <div class="form-group">
            <h3>Add Skill</h3>
            <input type="text" id="skill-name" placeholder="Skill" required />
            <textarea
              id="skill-details"
              placeholder="Description"
              rows="4"
              required
            ></textarea>
            <button type="button" class="btn btn2" onclick="submitSkill()">
              Add Skill
            </button>
          </div>
          <div class="skill-table">
            <h3>Skills</h3>
            <table border="1">
              <tr>
                <th>ID</th>
                <th>Skill</th>
                <th>Description</th>
                <th>Action</th>
              </tr>
              <% if (ski.length > 0) { %> <% ski.map((item) => { %>
              <tr>
                <td><%= item.ID %></td>
                <td><%= item.Skill %></td>
                <td><%= item.Description %></td>
                <td>
                  <button
                    type="button"
                    class="btn btn-edit"
                    onclick="editSkillDialog( '<%= item.ID %>', '<%= item.Skill %>', '<%= item.Description %>')"
                  >
                    Edit
                  </button>
                  <button onclick="deleteSkill('<%= item.ID %>')">
                    Delete
                  </button>
                </td>
              </tr>
              <% }); %> <% } else { %>
              <tr>
                <td colspan="4">No skills added yet.</td>
              </tr>
              <% } %>
            </table>
          </div>
        </div>

        <!-- Experience Form -->
        <div id="experience-form" class="form-section">
          <div class="form-group">
            <h3>Add Experience</h3>
            <input
              type="text"
              id="experience-title"
              placeholder="Experience"
              required
            />
            <textarea
              id="experience-details"
              placeholder="Detail"
              rows="4"
              required
            ></textarea>
            <button type="button" class="btn btn2" onclick="submitExperience()">
              Add Experience
            </button>
          </div>
          <div class="experience-table">
            <h3>Experience</h3>
            <table border="1">
              <tr>
                <th>ID</th>
                <th>Experience</th>
                <th>Description</th>
                <th>Action</th>
              </tr>
              <% if (exp.length > 0) { %> <% exp.map((item) => { %>
              <tr>
                <td><%= item.ID %></td>
                <td><%= item.Experience %></td>
                <td><%= item.Detail %></td>
                <td>
                  <button
                    type="button"
                    class="btn btn-edit"
                    onclick="editExperienceDialog( '<%= item.ID %>', '<%= item.Experience %>', '<%= item.Detail %>')"
                  >
                    Edit
                  </button>
                  <button onclick="deleteExperience('<%= item.ID %>')">
                    Delete
                  </button>
                </td>
              </tr>
              <% }); %> <% } else { %>
              <tr>
                <td colspan="4">No experience added yet</td>
              </tr>
              <% } %>
            </table>
          </div>
        </div>

        <!-- Education Form -->
        <div id="education-form" class="form-section">
          <div class="form-group">
            <h3>Add Education</h3>
            <input
              type="text"
              id="education-year"
              placeholder="Year (eg: 2064 - present)"
              required
            />
            <textarea
              id="education-details"
              placeholder="Detail"
              rows="4"
              required
            ></textarea>
            <button type="button" class="btn btn2" onclick="submitEducation()">
              Add Education
            </button>
          </div>
          <div class="education-table">
            <h3>Education</h3>
            <table border="1">
              <tr>
                <th>ID</th>
                <th>Year</th>
                <th>Detail</th>
                <th>Action</th>
              </tr>
              <% if (edu.length > 0) { %> <% edu.map((item) => { %>
              <tr>
                <td><%= item.ID %></td>
                <td><%= item.Year %></td>
                <td><%= item.Detail %></td>
                <td>
                  <button
                    type="button"
                    class="btn btn-edit"
                    onclick="editEducationDialog( '<%= item.ID %>', '<%= item.Year %>', '<%= item.Detail %>')"
                  >
                    Edit
                  </button>
                  <button onclick="deleteEducation('<%= item.ID %>')">
                    Delete
                  </button>
                </td>
              </tr>
              <% }); %> <% } else { %>
              <tr>
                <td colspan="4">No education added yet</td>
              </tr>
              <% } %>
            </table>
          </div>
        </div>

        <!-- Services Form -->
        <div id="services-form" class="form-section">
          <div class="form-group">
            <h3>Add Service</h3>
            <input type="text" id="service-symbol" placeholder="Symbol (only class name)" required />
            <input type="text" id="service-title" placeholder="Service" required />
            <textarea id="service-description" placeholder="Description" rows="4" required></textarea>
            <button type="button" class="btn btn2" onclick="submitService()">
              Add Service
            </button>
          </div>
          <div class="service-table">
            <h3>Services</h3>
            <table border="1">
              <tr>
                <th>ID</th>
                <th>Symbol</th>
                <th>Service</th>
                <th>Description</th>
                <th>Action</th>
              </tr>
              <% if (ser.length > 0) { %> <% ser.map((item) => { %>
              <tr>
                <td><%= item.id %></td>
                <td><%= item.symbol %></td>
                <td><%= item.title %></td>
                <td><%= item.description %></td>
                <td>
                  <button
                    type="button"
                    class="btn btn-edit"
                    onclick="editServiceDialog( '<%= item.id %>', '<%= item.symbol %>', '<%= item.title %>', '<%= item.description %>')"
                  >
                    Edit
                  </button>
                  <button onclick="deleteService('<%= item.id %>')">
                    Delete
                  </button>
                </td>
              </tr>
              <% }); %> <% } else { %>
              <tr>
                <td colspan="5">No services added yet</td>
              </tr>
              <% } %>
            </table>
          </div>
        </div>
      
    <!-- Footer -->
    <div class="copyright">
      <p>Copyright Â© 2025 Lakash. All Rights Reserved.</p>
    </div>

    <!-- Custom Dialog Box -->
    <div id="custom-dialog" class="dialog-overlay">
      <div class="dialog-box">
        <div class="dialog-content">
          <div class="dialog-icon" id="dialog-icon"></div>
          <div class="dialog-message" id="dialog-message">Success!</div>
        </div>
      </div>
    </div>

    <script src="/js/script.js"></script>
    <script src="/js/form.js"></script>
    <script></script>
  </body>
</html>
